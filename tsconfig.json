{
  "compilerOptions": {
    /* 1. Environment Settings */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler", // Tells TS to let your bundler handle imports
    "jsx": "react-jsx",
    "allowJs": true,               // Essential for gradual migration
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* 2. Style & Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": false, // This fixes your specific error
    "isolatedModules": true,
    "skipLibCheck": true,

    /* 3. Build & Source Map */
    "sourceMap": true,
    "noEmit": true                 // Usually your bundler handles the output, not TS
  },
  "include": ["src"]
}

